{
  "name": "llm-code-completion",
  "displayName": "LLM Code Completion",
  "description": "A VS Code extension for code completion using LLMs.",
  "version": "0.0.1",
  "publisher": "uniba",
  "engines": {
    "vscode": "^1.94.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onStartupFinished",
    "onCommand:triggerSuggestion",
    "onCommand:showConfigParameters"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "llmCodeCompletion.triggerSuggestion",
        "title": "Trigger Code Suggestion"
      },
      {
        "command": "llmCodeCompletion.showChatbot",
        "title": "Open Chatbot Panel"
      },
      {
        "command": "llmCodeCompletion.toggleInlineSuggestions",
        "title": "Toggle Inline Suggestions"
      },
      {
        "command": "llmCodeCompletion.openSettingsWizard",
        "title": "Open Settings Wizard"
      }
    ],
    "keybindings": [
      {
        "command": "llmCodeCompletion.triggerSuggestion",
        "key": "ctrl+alt+s",
        "when": "editorTextFocus"
      },
      {
        "command": "llmCodeCompletion.toggleAutomaticSuggestions",
        "key": "ctrl+alt+a",
        "when": "editorTextFocus"
      },
      {
        "command": "llmCodeCompletion.openSettingsWizard",
        "key": "ctrl+alt+t",
        "when": "editorTextFocus"
      }
    ],
    "configuration": {
      "type": "object",
      "title": "LLM Code Completion Settings",
      "properties": {
        "llmCodeCompletion.displayMode": {
          "type": "string",
          "enum": [
            "inline",
            "tooltip",
            "sideWindow",
            "chatbot",
            "hybrid"
          ],
          "default": "sideWindow",
          "description": "Choose how code suggestions are displayed.",
          "markdownEnumDescriptions": [
            "Inline: Show code suggestions inline, next to your code.",
            "Tooltip: Show code suggestions in a popup window near your cursor.",
            "Side Window: Show code suggestions in a minimal side window.",
            "Chatbot: Show code suggestions within an interactive chatbot in a side window.",
            "Hybrid: Choose how to show code suggestions depending on their length."
          ]
        },
        "llmCodeCompletion.hybridModeShortSuggestions": {
          "type": "string",
          "enum": [
            "inline",
            "tooltip"
          ],
          "default": "inline",
          "description": "Only works when Display Mode is set to 'hybrid' - Choose how to display short code suggestions.",
          "when": "llmCodeCompletion.showHybridConfigs",
          "markdownEnumDescriptions": [
            "Inline: Show short code suggestions inline, next to your code.",
            "Tooltip: Show short code suggestions in a popup window near your cursor."
          ]
        },
        "llmCodeCompletion.hybridModeLongSuggestions": {
          "type": "string",
          "enum": [
            "sideWindow",
            "chatbot"
          ],
          "default": "sideWindow",
          "description": "Only works when Display Mode is set to 'hybrid' - Choose how to display long code suggestions.",
          "when": "llmCodeCompletion.showHybridConfigs",
          "markdownEnumDescriptions": [
            "Side Window: Show long code suggestions in a minimal side window.",
            "Chatbot: Show long code suggestions within an interactive chatbot in a side window."
          ]
        },
        "llmCodeCompletion.triggerMode": {
          "type": "string",
          "enum": [
            "proactive",
            "onDemand"
          ],
          "default": "proactive",
          "description": "Choose how code suggestions are triggered."
        },
        "llmCodeCompletion.suggestionGranularity": {
          "type": "number",
          "minimum": 1,
          "maximum": 10,
          "default": 8,
          "description": "Adjust the granularity of code suggestions (min. 1, max. 10)."
        },
        "llmCodeCompletion.includeDocumentation": {
          "type": "boolean",
          "default": false,
          "description": "Include documentation references in suggestions."
        },
        "llmCodeCompletion.openaiAPIKey": {
          "type": "string",
          "default": "",
          "description": "Set the OpenAI API key to use GPT-4o-mini model."
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.9",
    "@types/node": "20.x",
    "@types/vscode": "^1.94.0",
    "@typescript-eslint/eslint-plugin": "^8.10.0",
    "@typescript-eslint/parser": "^8.7.0",
    "@vscode/test-cli": "^0.0.10",
    "@vscode/test-electron": "^2.4.1",
    "eslint": "^9.13.0",
    "typescript": "^5.6.3"
  },
  "dependencies": {
    "axios": "^1.7.7",
    "dotenv": "^16.4.5"
  }
}
